# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Error Tracking (Optional)
SENTRY_DSN=

# Trading API Keys (if using live trading)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Database (if needed)
DATABASE_URL=

# Redis (Job Store & Coordination)
# Use redis:// for standard Redis or rediss:// for SSL/TLS
# Format: redis://[username:password@]host:port/db
REDIS_URL=redis://localhost:6379/0

# Job Store Configuration
# Options: "memory" (default, in-memory) or "redis" (Redis-backed)
# Use "redis" in staging/production for persistent job storage
JOB_STORE=memory
